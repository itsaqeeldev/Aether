<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- OUTER MASK (the capsule shape every layer will follow) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="36dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- LEFT BLEND (no corners!) -->
    <item android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#203F29F8"
                android:endColor="#00111122"/>
        </shape>
    </item>

    <!-- RIGHT BLEND (no corners!) -->
    <item android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="#203B82F6"
                android:endColor="#00111122"/>
        </shape>
    </item>

    <!-- BASE LAYER (no corners!) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#14162233"/>
        </shape>
    </item>

    <!-- FROST (no corners!) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#08FFFFFF"/>
        </shape>
    </item>

</layer-list>
