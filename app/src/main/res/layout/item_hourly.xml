<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemHourlyRoot"
    android:layout_width="72dp"
    android:layout_height="110dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:00"
        android:textColor="@color/aether_text_secondary"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/icHourWeather"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_sun"
        android:tint="@color/aether_purple_start" />

    <TextView
        android:id="@+id/txtHourTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="24Â°C"
        android:textColor="@color/aether_text_primary"
        android:textSize="16sp" />

</LinearLayout>
